<!DOCTYPE html>
<html lang="de">
  <head>
    <%- include('_views/include/head') %> 
    <link rel="stylesheet" href="assets/icons/css/icons.css">
    <script>
      window.sa_event =
        window.sa_event ||
        function () {
          var a = [].slice.call(arguments);
          window.sa_event.q
            ? window.sa_event.q.push(a)
            : (window.sa_event.q = [a]);
        };
    </script>
  </head>
  <body>
    <div class="page">
      <section class="hero is-primary">
        <div class="hero-body">
          <div class="container">
            <div class="columns is-mobile is-centered">
              <div class="column is-11-mobile is-7-tablet is-6-desktop is-5-widescreen">
                <%- include('_views/components/title', {link: false}) %>
                <p class="subtitle is-4">
                  Individuelle Nachhilfe für Informatik-Studenten.
                </p>
                <p class="subtitle is-4">
                  Buchungen sind ab <b>Mitte Oktober</b> möglich.
                  In der Zwischenzeit kannst Du mich gerne kontaktieren,
                  um benachrichtigt zu werden, wenn es soweit ist.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
      <div id="contact-container">
        <div class="hero-continuation"></div>
        <div class="container">
          <div class="columns is-marginless is-mobile is-centered">
            <div class="column is-11-mobile is-7-tablet is-7-desktop is-6-widescreen">
              <div class="card">
                <div class="card-content">
                  <div class="content">
                    <%- include('_views/components/contact'); -%>
                  </div>
                </div>
              </div>
              <div class="section">
                <%- include('_views/components/personal/about-me') %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('_views/components/footer') %>
    <%- include('_views/components/analytics') %>
    <% if (is_development) { %>
      <script>
        window.is_development = true;
      </script>
    <% } %>
    <script src="assets/js/main.js"></script>
  </body>
</html>
