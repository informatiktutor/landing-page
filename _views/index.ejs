<!DOCTYPE html>
<html lang="de">
  <% ENV = process.env.ENV %>
  <% is_production = ENV === 'production' %>
  <% is_development = ENV === 'development' || ENV === undefined %>
  <% domain = 'informatiktutor.de' %>
  <head>
    <%- include('_views/include/head') %> 
    <link rel="stylesheet" href="assets/icons/css/icons.css">
    <script>
      window.sa_event =
        window.sa_event ||
        function () {
          var a = [].slice.call(arguments);
          window.sa_event.q
            ? window.sa_event.q.push(a)
            : (window.sa_event.q = [a]);
        };
    </script>
  </head>
  <body>
    <div class="page">
      <section class="hero is-primary">
        <div class="hero-body">
          <div class="container">
            <div class="columns is-mobile is-centered">
              <div class="column is-7-tablet is-6-desktop is-11-mobile">
                <%- include('_views/components/title', {link: false}) %>
                <p class="subtitle is-4">
                  Individuelle Nachhilfe für Informatik-Studenten.
                </p>
                <p class="subtitle is-4">
                  Buchungen sind ab <b>Mitte Oktober</b> möglich.
                  In der Zwischenzeit kannst Du mich gerne kontaktieren,
                  um benachrichtigt zu werden, wenn es soweit ist.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
      <div id="contact-container" class="mb-6">
        <div class="hero-continuation"></div>
        <div class="container">
          <div class="columns is-marginless is-mobile is-centered">
            <div class="column is-11-mobile is-7-tablet is-7-desktop">
              <div class="card">
                <div class="card-content">
                  <div class="content">
                    <%- include('_views/components/contact'); -%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('_views/components/footer') %>
    <% if (is_development) { %>
      <script>
        window.is_development = true;
      </script>
    <% } %>
    <!-- Simple Analytics START -->
    <% ignore_dnt = true %>
    <% analytics_custom_domain = 'sa.' + domain %>
    <% analytics_scripts_domain = 'scripts.simpleanalyticscdn.com' %>
    <% analytics_queue_domain = 'queue.simpleanalyticscdn.com' %>
    <% hostname = is_production ? domain : 'dev.' + domain %>
    <% analytics_suffix = is_development ? '.dev' : '' %>
    <script async defer data-hostname="<%= hostname %>" data-collect-dnt="<%= ignore_dnt %>"
      src="https://<%= analytics_scripts_domain %>/latest<%= analytics_suffix %>.js"></script>
    <noscript>
      <img src="https://<%= analytics_queue_domain %>/noscript.gif?hostname=<%= hostname %>&ignore-dnt=<%= ignore_dnt %>"
      alt="" referrerpolicy="no-referrer-when-downgrade" />
    </noscript>
    <!-- Simple Analytics END -->
    <script src="assets/js/main.js"></script>
  </body>
</html>
